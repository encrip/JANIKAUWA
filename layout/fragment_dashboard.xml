<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    tools:context=".ui.activities.ui.fragments.DashboardFragment"
    >


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="140dp"
           android:background="@drawable/app_gradient_color_background"
           android:scaleType="centerCrop"
           android:src="@drawable/banne"/>

<!--       <ImageView-->
<!--           android:id="@+id/rImage"-->
<!--           android:layout_width="match_parent"-->
<!--           android:layout_height="140dp"-->
<!--           android:layout_marginBottom="0dp"-->
<!--           android:scaleType="centerCrop"/>-->

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#fff"
           android:layout_marginRight="5dp"
           android:layout_marginLeft="5dp"
           android:padding="5dp"
           android:layout_marginBottom="4dp">

           <LinearLayout

               android:layout_width="80dp"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:orientation="vertical">


               <LinearLayout
                   android:id="@+id/kasuwa1"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_gravity="center"
                   android:layout_margin="2dp"
                   android:background="@drawable/kasuwa_button_back">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:padding="12dp"
                       android:src="@drawable/baseline_local_offer_20"/>


               </LinearLayout>

               <janikasuwa.blogspot.com.app.utils.MSPTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="5dp"
                   android:fontFamily="sans-serif-light"
                   android:text="@string/kasuwar_nkwari"
                   android:textColor="#10141B"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:textSize="12sp" />


           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="10dp"
               android:layout_weight="1"/>

           <LinearLayout

               android:layout_width="80dp"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:orientation="vertical">


               <LinearLayout
                   android:id="@+id/kasuwa2"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_gravity="center"
                   android:layout_margin="2dp"
                   android:background="@drawable/kasuwa_button_back2">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:padding="12dp"
                       android:src="@drawable/baseline_local_offer_20"/>


               </LinearLayout>

               <janikasuwa.blogspot.com.app.utils.MSPTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="5dp"
                   android:fontFamily="sans-serif-light"
                   android:text="@string/kasuwa_nsinga"
                   android:textColor="#10141B"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:textSize="12sp" />


           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="10dp"
               android:layout_weight="1"/>

           <LinearLayout

               android:layout_width="80dp"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:orientation="vertical">


               <LinearLayout
                   android:id="@+id/kasuwa3"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_gravity="center"
                   android:layout_margin="2dp"
                   android:background="@drawable/kasuwa_button_back3">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:padding="12dp"
                       android:src="@drawable/baseline_local_offer_20"/>


               </LinearLayout>

               <janikasuwa.blogspot.com.app.utils.MSPTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="5dp"
                   android:fontFamily="sans-serif-light"
                   android:text="@string/kasuwar_nwaimbai"
                   android:textColor="#10141B"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:textSize="12sp" />


           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="10dp"
               android:layout_weight="1"/>

           <LinearLayout

               android:layout_width="80dp"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:orientation="vertical">


               <LinearLayout
                   android:id="@+id/kasuwa4"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_gravity="center"
                   android:layout_margin="2dp"
                   android:background="@drawable/kasuwa_button_back4">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:padding="12dp"
                       android:src="@drawable/baseline_local_offer_20"/>


               </LinearLayout>

               <janikasuwa.blogspot.com.app.utils.MSPTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="5dp"
                   android:fontFamily="sans-serif-light"
                   android:text="@string/kasuwar_ns_gari"
                   android:textColor="#10141B"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:textSize="12sp" />


           </LinearLayout>


       </LinearLayout>






       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/rv_dashboard_items"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:visibility="gone"
           android:layout_marginTop="2dp"
           android:layout_marginBottom="90dp"/>


       <TextView
           android:id="@+id/tv_no_dashboard_items_found"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="@string/no_dashboard_item_found"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_marginTop="400dp"
           android:textSize="@dimen/no_data_found_textSize" />
   </LinearLayout>
</ScrollView>