<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="1dp"
        android:paddingBottom="15dp"
        android:background="#ffff">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp">

            <!--            <ImageView-->
            <!--                android:id="@+id/img1"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="10dp"-->
            <!--                android:layout_gravity="end"-->
            <!--                android:layout_marginRight="15dp"-->
            <!--                android:src="@drawable/ic_like_heart_outline"/>-->

            <ImageView
                android:id="@+id/iv_dashboard_item_image"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/baseline_shopping_cart_24"
                android:layout_marginLeft="0dp"/>

            <janikasuwa.blogspot.com.app.MSPTextViewBold
                android:id="@+id/offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-15% "
                android:layout_marginTop="30dp"
                android:textColor="#ffffff"
                android:background="@drawable/rect2"
                android:padding="4dp"/>


        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <janikasuwa.blogspot.com.app.MSPTextViewBold
                android:id="@+id/tv_dashboard_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="#000" />



        </LinearLayout>

        <janikasuwa.blogspot.com.app.utils.MSPTextView
            android:id="@+id/tv_dashboard_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorPrimaryText"/>
    </LinearLayout>
</LinearLayout>